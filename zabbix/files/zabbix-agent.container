[Unit]
Description=Zabbix agent container
After=zabbix-pod.service network-online.target zabbix-server.service
Wants=zabbix-pod.service network-online.target zabbix-server.service

[Container]
ContainerName=zabbix-agent
Image=docker.io/zabbix/zabbix-agent:latest
Environment=ZBX_SERVER_HOST="127.0.0.1,localhost"
PodmanArgs=--pod=zabbix

[Install]
WantedBy=multi-user.target
